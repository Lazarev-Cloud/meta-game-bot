{
  "start": {
    "type": "callbackmenu",
    "keyboard_type": "reply",
    "max_in_row": 2,
    "options": {
      "register": { "next": "register_name" },
      "about": { "next": "about" },
      "settings": { "next": "settings" }
    }
  },

  "settings": {
    "type": "callbackmenu",
    "max_in_row": 2,
    "prompt": "settings.prompt",
    "options": {
      "lang_ru": {
        "handler": "set_lang_ru",
        "next": "__back__"
      },
      "lang_en": {
        "handler": "set_lang_en",
        "next": "__back__"
      },
      "back": {
        "next": "__back__"
      }
    }
  },
"register_name": {
  "type": "textinput",
  "prompt": "register_name.prompt",
  "field": "name",
  "handler": "validate_name",

  "exceptions": {
    "NameTooShortError": {
      "prompt": "errors.name_too_short",
      "next": "__repeat__"
    },
    "ValueError": {
      "next": "__repeat__"
    },
    "Exception": {
      "prompt": "errors.default",
      "next": "__menu__"
    }
  },

  "next": "register_greeting"
},
  "register_greeting": {
    "max_in_row": 2,
    "type": "callbackmenu",
    "handler": "save_name_to_state",
    "options": {
      "to_menu": {
        "next": "__menu__"
      },
      "restart": {
        "next": "register_name"
      }
    }
  },

  "about": {
    "type": "callbackmenu",
    "max_in_row": 2,
    "preserve_message": true,
    "options": {
      "back": {
        "next": "__back__"
      },
      "menu": {
        "next": "__menu__"
      }
    }
  }
}
